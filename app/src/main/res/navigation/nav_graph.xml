<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_learning"
    tools:layout="@layout/fragment_sign_in">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.personalizedlearning.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_learning"
        android:name="com.example.personalizedlearning.ui.learning.LearningFragment"
        android:label="Learning"
        tools:layout="@layout/fragment_learning" />

    <fragment
        android:id="@+id/navigation_assessment"
        android:name="com.example.personalizedlearning.ui.assessment.AssessmentFragment"
        android:label="Assessment"
        tools:layout="@layout/fragment_assessment" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.personalizedlearning.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_study_material"
        android:name="com.example.personalizedlearning.ui.study.StudyMaterialFragment"
        android:label="Study Material"
        tools:layout="@layout/fragment_study_material" />

    <fragment
        android:id="@+id/navigation_sign_in"
        android:name="com.example.personalizedlearning.ui.auth.SignInFragment"
        android:label="Sign In"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_sign_in_to_sign_up"
            app:destination="@id/navigation_sign_up" />
        <action
            android:id="@+id/action_sign_in_to_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_sign_in"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_sign_up"
        android:name="com.example.personalizedlearning.ui.auth.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_sign_up_to_sign_in"
            app:destination="@id/navigation_sign_in" />
        <action
            android:id="@+id/action_sign_up_to_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_sign_in"
            app:popUpToInclusive="true" />
    </fragment>

</navigation> 